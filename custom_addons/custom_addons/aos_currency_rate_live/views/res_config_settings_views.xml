<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
    <record id="res_config_settings_currency_id_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.currency.rate.id.live</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
			<xpath expr="//div[@id='update_currency_live']" position="after">
                <div>
                	<div class="text-muted">
                        <b>Choose your link for auto update rate currency</b>
	                </div>
                    <div class="row mt16">
                        <label string="Link" for="currency_id_provider" class="col-lg-3 o_light_label"/>
                    	<field name="currency_id_provider"/>
                    </div>
                    <div class="row">
                        <label string="Next Run" for="currency_id_next_execution_date" class="col-lg-3 o_light_label"/>
                        <field name="currency_id_next_execution_date"/>
                        <button name="update_currency_id_rates_manually" type="object" class="btn-link">
                            <i title="Update now" role="img" aria-label="Update now" class="fa fa-fw fa-refresh"></i>
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
